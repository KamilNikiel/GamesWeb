@model GamesWeb.ViewModels.GameFormViewModel
@{
    ViewBag.Title = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Title</h2>

@using (Html.BeginForm("Save", "Games"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Game.Name)
        @Html.TextBoxFor(m => m.Game.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Game.ReleaseDate)
        @*<label for="Birthdate">Date of Birth</label>*@
        @Html.TextBoxFor(m => m.Game.ReleaseDate, "{0:d MMM yyyy}", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Game.GenreId)
        @Html.DropDownListFor(m => m.Game.GenreId,
            new SelectList(Model.Genres, "Id", "Name"),
            "Select Genre",
            new { @class = "form-control" })
    </div>
    @Html.HiddenFor(m => m.Game.Id)
    <button type="submit" class="btn btn-primary">Save</button>
}