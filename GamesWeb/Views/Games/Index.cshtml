@model IEnumerable<GamesWeb.Models.Game>

    @{
        ViewBag.Title = "Games";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
<body>
    <p>
        <h3>
            @using (Html.BeginForm("New", "Games"))
            {
                <button type="submit" class="btn btn-primary btn-lg">Add New Game</button>
            }
        </h3>
    </p>


    @if (!Model.Any())
    {
        <p>We don't have any games yet.</p>
    }
    else
    {
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th scope="col">Game</th>
                    <th scope="col">Genre</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var game in Model)
                {
                    <tr>
                        <td scope="row">@Html.ActionLink(game.Name, "Edit", "Games", new { id = game.Id }, new { @class="btn btn-outline-info" })</td>
                        <td>@game.Genre.Name</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</body>