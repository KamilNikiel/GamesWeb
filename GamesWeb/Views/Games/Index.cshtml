@model IEnumerable<GamesWeb.Models.Game>

    @{
        ViewBag.Title = "Games";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
<body>

    <h3>
        @using (Html.BeginForm("New", "Games"))
        {
            <button type="submit" class="btn btn-primary">Add New Game</button>
        }
    </h3>

    @if (!Model.Any())
    {
        <p>We don't have any games yet.</p>
    }
    else
    {
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Game</th>
                    <th>Genre</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var game in Model)
                {
                    <tr>
                        <td>@Html.ActionLink(game.Name, "Edit", "Games", new { id = game.Id }, null)</td>
                        <td>@game.Genre.Name</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</body>