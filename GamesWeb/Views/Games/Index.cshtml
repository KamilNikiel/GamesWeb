@model IEnumerable<GamesWeb.Models.Game>
<body>

    @{
        ViewBag.Title = "Games";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <h2>Games</h2>
    @if (!Model.Any())
    {
        <p>We don't have any games yet.</p>
    }
    else
    {
        <table class="table table-bordered table-hover">
            <tbody>
                @foreach (var game in Model)
                {
                    <tr>
                        <td>@game.Name</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</body>